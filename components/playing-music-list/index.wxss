/* 展示播放列表 */
.play-list .cover{
  width: 100%;
  height: 100%;
  background:rgba(0, 0, 0, .3);
  position: fixed;
  top: 0;
  left: 0;
}
.play-list-bottom { 
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 20rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
}
.play-list .play-list-wrapper {
  height: 600rpx;
  width: 100%;
}

.play-list-wrapper .play-list-item {
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.play-list-wrapper .play-active {
  color: #f00;
  font-weight: 600;
}
.play-list-item text {
  color: #666;
  font-size: 26rpx;
  vertical-align: top;
}
.play-active text {
  color: #f00;
}
