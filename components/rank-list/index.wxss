/* 巅峰帮 */
.rank-list {
  margin-bottom: 30rpx;
}
.rank-list .rank-item {
  display: flex;
  justify-content: space-between;
  background: #f0efee;
  border-radius: 12rpx;
  align-items: center;
}

.rank-item .item-left {
  /* flex: 2; */
  width: 66%;
  /* padding: 30rpx 20rpx; */
  padding: 0 20rpx 0 20rpx;
  box-sizing: border-box;
}

.item-left .item-title {
  font-size: 36rpx;
  font-weight: 600;
}

.item-left .item-info {
  line-height: 46rpx;
  height: 46rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.item-info text {
  color: #999;
}
.rank-item .item-right {
  /* flex: 1; */
  width: 33%;
  position: relative;
}

.item-right image {
  width: 100%;
  display: block;
}

.item-right .play-count {
  position: absolute;
  background: rgba(0, 0, 0, .4);
  bottom: 0;
  right: 0;
  padding: 14rpx 10rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 10rpx;
}
