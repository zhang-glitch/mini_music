.video-item {
  width: 100%;
  margin-bottom: 10rpx;
}

.video-container {
  width: 100%;
}

.video-container .video-cover {
  width: 100%;
  position: relative;
  border-radius: 10px;
}

.video-cover text {
  position: absolute;
  bottom: 8px;
  color: #ffffff;
  font-size: 14px;
}
.video-cover text:nth-child(1) {
  /* background: url(""); */
  left: 5px;
}

.video-cover text:nth-child(2) {
  right: 5px;
}

.video-name {
  /* 多行文本省略 */
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  font-size: 16px;
}