page {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.music-menu-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.music-item  {
  width: 48%;
  margin-bottom: 20rpx;
}

.music-item .item-top {
  position: relative;
}

.item-top text{
  position: absolute;
  bottom: 0;
  right: 4rpx;
  background: rgba(0, 0, 0, .5);
  padding: 6rpx 10rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 20rpx;
}
.item-top .music-item-image {
  width: 100%;
  display: block;
  border-radius: 20rpx;
}

.music-item .item-bottom {
  margin-top: 10rpx;
  color: #000;
  font-size: 28rpx;
  font-weight: 400;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  /* 这三个是必须的 */
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
}