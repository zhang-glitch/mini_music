
.video-detail {
  width: 100%;
  padding-top: 230px;
}
.video-detail .video-url {
  width: 100%;
  position: fixed;
  top: 0;
}

.mv-bottom {
  padding: 0 20rpx;
}

.detail-info .detail-info-title {
  font-size: 40rpx;
  font-weight: 800;
}

.detail-info .author {
  color: #6b696d;
  padding: 10rpx 0;
}

.other-info  {
  display: flex;
  justify-content: space-between;
  color: #6b696d;
}

.relate-list-wrapper {
  margin-top: 30px;
}

.relate-list-wrapper .relate-title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.relate-list-item  {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.relate-list-item image {
  flex: 35%;
  border-radius: 5px;
  margin-right: 3%;
}

.relate-list-item .mv-info-wrapper {
  flex: 60%;
}

.mv-info-wrapper .video-info {
  color: #000000;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.mv-info-wrapper .video-author {
  color: #888;
  font-size: 14px;
  margin-top: 10px;
}

